@model ApexChartPieChartModel

@{
    int[] _series = Model.Series;
    string[] _lables = Model.Labels;
}

@{
    ViewBag.Title = "Pie Chart";
    Layout = "_Layout";
}

<div id="chart"></div> 

@section scripts
{
    <script>
        const _series =  @Html.Raw(JsonConvert.SerializeObject(_series)) 
        const _label = @Html.Raw(JsonConvert.SerializeObject(_lables))
        
        var options = {
            series: _series,
            chart: {
                width: 380,
                type: 'pie',
            },
            labels: _label,
            responsive: [{
                breakpoint: 480,
                options: {
                    chart: {
                        width: 200
                    },
                    legend: {
                        position: 'bottom'
                    }
                }
            }]
        };
    
        var chart = new ApexCharts(document.querySelector("#chart"), options);
        chart.render();
    </script>   
}